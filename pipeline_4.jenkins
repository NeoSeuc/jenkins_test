pipeline {
   agent any

   stages {
      stage ('install requirements') {
      agent {
            docker {
                image 'python:3.9'
            }
        }
        steps {
          echo 'Installing requirements...'
          sh 'pip install -r requirements.txt'
        }
      }
      stage('run python test') {
        steps{      
          sh 'python tests.py'
        }
        }

  }
}