pipeline {
   agent any

   stages {
      stage ('install requirements') {
        steps {
          echo 'Creating virtual environment...'
          sh 'python3 -m venv venv'
          echo 'Activating virtual environment...'
          sh '. venv/bin/activate && pip install -r requirements.txt'
        }
      }
      stage('run python test') {
        steps{      
          sh 'python tests.py'
        }
        }

  }
}