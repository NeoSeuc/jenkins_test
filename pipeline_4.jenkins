pipeline {
   agent {
    docker {
        image 'python:3.9'
    }
}

   stages {
      stage ('install requirements') {
        steps {
          echo 'Installing requirements...'
          sh 'pip install -r requirements.txt'
        }
      }
      stage('run python test') {
        steps{      
          sh 'python tests.py'
        }
        }

  }
}